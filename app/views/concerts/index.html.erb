<h1>Listing concerts</h1>

<table>
  <tr>
    <th>Act name</th>
    <th>Location</th>
    <th>Start date</th>
    <th>Start time</th>
    <th>End time</th>
    <th>Capacity</th>
    <th>Image</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @concerts.each do |concert| %>
  <tr>
    <td><%= concert.act_name %></td>
    <td><%= concert.location %></td>
    <td><%= concert.start_date %></td>
    <td><%= concert.start_time %></td>
    <td><%= concert.end_time %></td>
    <td><%= concert.capacity %></td>
    <td><%= concert.image %></td>
    <td><%= concert.longitude %></td>
    <td><%= concert.latitude %></td>
    <td><%= link_to 'Show', concert %></td>
    <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
    <td><%= link_to 'Destroy', concert, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

