<!DOCTYPE html>
<html>
<head>
  <title>Eventsapp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="banner" >
  <table>
       <tr>
          <td><%= link_to(image_tag("tickets.jpg", :size => "70x70"), root_path) %></td>
		  <td>
		      <% if !signed_in?%>
			      <%= link_to "Sign In", signin_path %>
			  <% else %>
			    <p>Welcome, </p><%= @current_user.name %>
				<%= link_to "Sign Out", signout_path %>
              <% end %>      			  
		  </td>
		  <td> <%= link_to "Register", new_user_path %></td>
		  <td><%= link_to "Concerts", concerts_path%><td>
		  <td><form id="search" method="get" action="http://www.google.com"></td> <!-- --> 
		  <td><input type="text" class="textinput" name="q" size="21" maxlength="120" placeholder="Search Events"><input type="submit" value="Search" class="button">
		      </form>
              <div class="clear"></div></td>
	    </tr>
    </table>
</div>
<%@page_title || "EvenTech" %>

<%= yield %>

</body>
</html>
